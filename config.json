{
    "main": {
        "dest": "build"
    },

    "nbeat": {
        "gulp": "./node_modules/nbeat-sass-tasks/tasks"
    },
    
    "gulp": {
        "loadPlugins": {
            "pattern": ["gulp-*",
                        "gulp.",
                        "debug",
                        "del",
                        "nano",
                        "metalsmith-*"]
        }
    },

    "metalsmith": {
        "engine":    "swig",
        "src":       "src/html/pages/**/*",
        "templates": "src/html/templates",
        "metadata": {
            "global": "var/data.json"
        }
    },
    "sass": {
        "src":  "src/scss/*.scss",
        "dest": "/css",
        "opts": {
            "includePaths": ["./node_modules",
                             "./github/bootstrap/scss",
                             "./nbeat/scss/nbeat"
                            ],
            "Sourcemap": true,
            "omitSourceMapUrl": true,
            "outFile": "./build/css/site.map"
        }
    },
    "assets": {
        "images": {
            "dest": "/img",
            "src": ["src/img/**/*",
                    "./nbeat/img/icons/*.svg"
                   ]
        },
        "fonts": {
            "dest": "/fonts",
            "src": ["src/fonts/**/*"]
        },
        "css": {
            "dest": "/css",
            "src": []
        },
        "favicon": {
            "dest": "/",
            "src": ["src/favicon/**/*"]
        },
        "js": {
            "dest": "/js",
            "src": ["src/js/**/*",
                    "./github/bootstrap/dist/js/bootstrap.min.js",
                    "./nbeat/js/**/*",
                    "node_modules/jquery/dist/jquery.min.js",
                    "node_modules/masonry-layout/dist/*.min.js"
                   ]
        }
    }
}
